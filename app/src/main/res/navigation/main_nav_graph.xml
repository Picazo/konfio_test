<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.konfiotest.fragment.DogsSplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/dogs_splash">

        <action
            android:id="@+id/action_splashFragment_to_dogsListFragment"
            app:destination="@id/dogsListFragment" />
    </fragment>

    <fragment
        android:id="@+id/dogsListFragment"
        android:name="com.konfiotest.fragment.DogsViewFragment"
        android:label="fragment_dogs_view"
        tools:layout="@layout/dogs_view_fragment">
    </fragment>

</navigation>